<UserControl x:Class="Sae.View.TraiterResponsable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sae.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="720" Width="1280" Background="#F5F5F5">
    <DockPanel>
        <!-- Bandeau rouge en haut -->
        <Border Background="#D50000" DockPanel.Dock="Top" Height="60">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="LOXAM - Gestion Réservations" 
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <Button x:Name="ButtonRetour" Content="← Retour" Grid.Column="1" Background="#616161" Foreground="White" Padding="10,5" Margin="20,15,20,15" Click="ButtonRetour_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- Section gauche - Informations matériel -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Traitement du matériel" FontSize="24" FontWeight="Bold" Foreground="#D50000" Margin="0,0,0,10"/>

                    <!-- Informations du matériel sélectionné -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock x:Name="TxtNomMateriel" Text="Nom du matériel" 
                                       FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtCategorie" Text="Catégorie" 
                                       FontSize="14" Foreground="#666666" Margin="0,0,0,3"/>
                            <TextBlock x:Name="TxtReference" Text="Référence" 
                                       FontSize="12" Foreground="#666666" Margin="0,0,0,10"/>

                            <!-- État actuel -->
                            <TextBlock x:Name="TxtEtatActuel" Text="État actuel" 
                                       FontSize="14" FontWeight="Bold" Padding="8,4" 
                                       Background="#E0E0E0" Foreground="#333333"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <!-- Image de la nacelle -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Height="99"/>
                </StackPanel>

                <!-- Section droite - Formulaire -->
                <StackPanel Grid.Column="1">

                    <!-- Nouveau statut -->
                    <TextBlock Text="Nouveau statut" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <RadioButton x:Name="RbAReviser" Content="À réviser" GroupName="EtatMateriel" Foreground="#333333" Margin="0,0,0,8"/>
                        <RadioButton x:Name="RbAReparer" Content="À réparer" GroupName="EtatMateriel" Foreground="#333333" Margin="0,0,0,8"/>
                        <RadioButton x:Name="RbDisponible" Content="Disponible" GroupName="EtatMateriel" Foreground="#333333"/>
                    </StackPanel>

                    <!-- Nom du matériel -->
                    <TextBlock x:Name="TxtTitreMateriel" Text="Matériel sélectionné" 
                               FontSize="18" FontWeight="Bold" Foreground="#D50000" Margin="0,0,0,15"/>

                    <!-- Section Commentaires -->
                    <TextBlock Text="Commentaires" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>

                    <TextBox x:Name="TxtCommentaires" 
                             Height="120" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="White"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Padding="8"
                             FontSize="12"
                             Margin="0,0,0,30"/>

                    <!-- Boutons d'action -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BtnAnnuler" 
                                Content="Annuler" 
                                Background="#6C757D" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="20,8" 
                                Margin="0,0,10,0"
                                FontSize="12"
                                Cursor="Hand"
                                Click="BtnAnnuler_Click"/>

                        <Button x:Name="BtnValider" 
                                Content="valider" 
                                Background="#28A745" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="20,8"
                                FontSize="12"
                                Cursor="Hand"
                                Click="BtnValider_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>