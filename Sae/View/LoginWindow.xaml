<UserControl x:Class="Sae.View.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sae.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Red">
        <!-- Login Card -->
        <Border
        MaxWidth="400"
        Padding="40"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                BlurRadius="15"
                Opacity="0.3"
                ShadowDepth="10"
                Color="Black" />
            </Border.Effect>

            <StackPanel>
                <!-- Logo Section -->
                <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                    <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="#E60000"
                    Text="LOXAM" />
                    <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="#666"
                    Text="Gestion des Réservations" />
                </StackPanel>

                <!-- Form Section -->
                <StackPanel>
                    <!-- Username -->
                    <StackPanel Margin="0,0,0,20">
                        <Label
                        Margin="0,0,0,8"
                        Content="Identifiant"
                        FontWeight="Medium"
                        Foreground="#333" />
                        <TextBox
                        x:Name="UsernameTextBox"
                        Padding="12"
                        FontSize="14"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Height="40"
                        Tag="Votre identifiant" />
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Margin="0,0,0,20">
                        <Label
                        Margin="0,0,0,8"
                        Content="Mot de passe"
                        FontWeight="Medium"
                        Foreground="#333" />
                        <PasswordBox
                        x:Name="PasswordBox"
                        Padding="12"
                        FontSize="14"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Height="40" />
                    </StackPanel>

                    <!-- Login Button -->
                    <Button
                    x:Name="LoginButton"
                    Click="LoginButton_Click"
                    Content="Se connecter"
                    Background="#E60000"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12"
                    FontSize="16"
                    FontWeight="Medium"
                    Height="40"
                    Cursor="Hand" />
                </StackPanel>

                <!-- Footer -->
                <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                FontSize="12"
                Foreground="#666"
                Text="Version 1.0 - Loxam Internal System" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
