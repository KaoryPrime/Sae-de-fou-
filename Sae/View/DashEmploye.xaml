<UserControl
    x:Class="Sae.View.DashEmploye"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sae.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1280"
    Height="720"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#F5F5F5"
    mc:Ignorable="d">
    <DockPanel>
        <Border
            Height="60"
            Background="#D50000"
            DockPanel.Dock="Top">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="LOXAM - Dashboard Employé" />
                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="ButDeconnexion"
                        Padding="10,5"
                        Background="#FF5252"
                        Click="ButDeconnexion_Click"
                        Content="Déconnexion"
                        Foreground="White" />
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!--  Statistiques  -->
                <UniformGrid
                    Margin="0,10"
                    HorizontalAlignment="Stretch"
                    Columns="4">
                    <Border
                        Margin="5"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#D50000"
                                Text="12" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Text="Réservations aujourd'hui" />
                        </StackPanel>
                    </Border>

                    <Border
                        Margin="5"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#D50000"
                                Text="8" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Text="Matériels disponibles" />
                        </StackPanel>
                    </Border>

                    <Border
                        Margin="5"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#D50000"
                                Text="3" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Text="Retours attendus" />
                        </StackPanel>
                    </Border>

                    <Border
                        Margin="5"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#D50000"
                                Text="€2,450" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Text="CA du jour" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Actions principales avec boutons  -->
                <TextBlock
                    Margin="0,20,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Actions principales" />
                <UniformGrid
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    Columns="2"
                    Rows="2">

                    <!--  Réserver un matériel  -->
                    <Button
                        x:Name="ReserverButton"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="ReserverButton_Click"
                        Cursor="Hand">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                FontSize="32"
                                Text="📋"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Réserver un matériel"
                                TextAlignment="Center" />
                            <TextBlock
                                FontSize="12"
                                Text="Rechercher et réserver du matériel pour un client"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!--  Rechercher une réservation  -->
                    <Button
                        x:Name="RechercherButton"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="RechercherButton_Click"
                        Cursor="Hand">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                FontSize="32"
                                Text="🔍"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Rechercher une réservation"
                                TextAlignment="Center" />
                            <TextBlock
                                FontSize="12"
                                Text="Valider ou supprimer une réservation existante"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!--  Retour de matériel  -->
                    <Button
                        x:Name="RetourButton"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="RetourButton_Click"
                        Cursor="Hand">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                FontSize="32"
                                Text="🔄"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Retour de matériel"
                                TextAlignment="Center" />
                            <TextBlock
                                FontSize="12"
                                Text="Gérer le retour et contrôler l'état du matériel"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!--  Créer un client  -->
                    <Button
                        x:Name="CreerClientButton"
                        Margin="10"
                        Padding="20"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="CreerClientButton_Click"
                        Cursor="Hand">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                FontSize="32"
                                Text="👤"
                                TextAlignment="Center" />
                            <TextBlock
                                Margin="0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Créer un client"
                                TextAlignment="Center" />
                            <TextBlock
                                FontSize="12"
                                Text="Ajouter un nouveau client au système"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
