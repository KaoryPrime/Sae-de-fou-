<UserControl x:Class="Sae.View.DashResponsable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sae.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="720" Width="1280" Background="#F5F5F5">
    <DockPanel>
        <!-- Bandeau rouge en haut -->
        <Border Background="#D50000" DockPanel.Dock="Top" Height="60">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="LOXAM - Gestion Réservations" 
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="👤 Responsable: Marie Martin" Foreground="White" VerticalAlignment="Center"/>
                    <Button x:Name="ButDeconnexion" Content="Déconnexion" Background="#FF5252" Foreground="White" Padding="10,5" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Titre -->
                <TextBlock Text="Matériels à réviser/réparer" FontSize="20" FontWeight="Bold" Foreground="#D50000" />

                <!-- Champ de recherche -->
                <TextBox x:Name="RechercheTextBox" Width="300" Height="30" Margin="0,0,0,10" TextChanged="RechercheTextBox_TextChanged"/>


                <DataGrid IsReadOnly="True" x:Name="dgmateriel" ItemsSource="{Binding LesMaterieles}" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Matériel" Binding="{Binding Nommateriel}" Width="2*"/>
                        <DataGridTextColumn Header="Catégorie" Binding="{Binding Categorie.Libellecategorie}" Width="*"/>
                        <DataGridTextColumn Header="État" Binding="{Binding Etat.Libelleetat}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Etat.Libelleetat}" Value="À réviser">
                                            <Setter Property="Background" Value="Orange"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="5,2"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Etat.Libelleetat}" Value="À réparer">
                                            <Setter Property="Background" Value="Red"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="5,2"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Référence" Binding="{Binding Reference}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Traiter" 
                            Background="#007ACC" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Padding="10,5" 
                            Cursor="Hand"
                            Click="TraiterMateriel_Click"
                            Tag="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Tableau -->
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
