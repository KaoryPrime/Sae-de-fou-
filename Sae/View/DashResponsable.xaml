<UserControl x:Class="Sae.View.DashResponsable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sae.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="720" Width="1280" Background="#F5F5F5">
    <DockPanel>
        <!-- Bandeau rouge en haut -->
        <Border Background="#D50000" DockPanel.Dock="Top" Height="60">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="LOXAM - Gestion Réservations" 
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="👤 Responsable: Marie Martin" Foreground="White" VerticalAlignment="Center"/>
                    <Button x:Name="ButDeconnexion" Content="Déconnexion" Background="#FF5252" Foreground="White" Padding="10,5" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Titre -->
                <TextBlock Text="Matériels à réviser/réparer" FontSize="20" FontWeight="Bold" Foreground="#D50000" />

                <!-- Champ de recherche -->
                <TextBox x:Name="RechercheTextBox" Width="300" Height="30" Margin="0,0,0,10" TextChanged="RechercheTextBox_TextChanged"/>


                <DataGrid IsReadOnly="True" x:Name="dgsejour" ItemsSource = "{Binding LesMaterieles}" AutoGenerateColumns="False" Height="236">
                <DataGrid.Columns>
                        <DataGridTextColumn Header="Référence" Binding="{Binding Reference, ValidatesOnExceptions=true}" Width="*"/>
                        <DataGridTextColumn Header="NUM MATERIEL " Binding="{Binding Nummateriel , ValidatesOnExceptions=true}" Width="*"/>
                        <DataGridTextColumn Header="Matériel" Binding="{Binding Nommateriel, ValidatesOnExceptions=true}" Width="*"/>
                </DataGrid.Columns>
                </DataGrid>
                <!-- Tableau -->
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
