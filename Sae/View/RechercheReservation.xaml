<UserControl x:Class="Sae.View.RechercheReservation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sae.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="720" Width="1280" Background="#F5F5F5">

    <DockPanel>
        <!-- Bandeau rouge en haut -->
        <Border Background="#D50000" DockPanel.Dock="Top" Height="60">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="LOXAM - Recherche Matériel" 
                       Foreground="White" FontSize="20" FontWeight="Bold"
                       VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <Button x:Name="ButtonRetour" Content="← Retour" Grid.Column="1" Background="#616161" Foreground="White" Padding="10,5" Margin="20,15,20,15" Click="ButtonRetour_Click" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Padding="40" HorizontalAlignment="Center" VerticalAlignment="Top" Background="White" CornerRadius="12" Height="346" Width="780" Margin="0,50,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="10" Color="Black" />
            </Border.Effect>
            <StackPanel>
                <!-- Logo Section -->
                <StackPanel  HorizontalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" FontSize="32" FontWeight="Bold" Foreground="#E60000" Text="Réservation trouvés" />
                </StackPanel>
                <!-- Form Section -->
                <StackPanel>
                    <!-- Username -->
                    <DataGrid x:Name="GdRechercheReserv" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged_1"  Background="White" Height="211" Width="720" >
                    </DataGrid>
                    <!-- Login Button -->
                </StackPanel>
                <!-- Footer -->
            </StackPanel>
        </Border>
    </DockPanel>



</UserControl>